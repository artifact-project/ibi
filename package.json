{
  "name": "ibi",
  "version": "0.3.0",
  "description": "A set of tools for working with code based on interfaces.",
  "repository": "git@github.com:artifact-project/ibi.git",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc",
    "clean": "git clean -f",
    "prepublish": "npm run test && npm run build",
    "postpublish": "npm run clean"
  },
  "author": "RubaXa <trash@rubaxa.org>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "jest": "^20.0.3",
    "ts-jest": "^20.0.4",
    "typescript": "^2.3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "\\.tests\\.ts$",
    "setupTestFrameworkScriptFile": "<rootDir>/__jest__/extensions.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
